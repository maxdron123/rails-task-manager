<h1>All present tasks</h1>
<ul>
<%@tasks.each do |task| %>
<li><%=link_to "#{task.title}", task_path(task)%>
<%= link_to task_path(task),data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do%>
<i class="fa-solid fa-trash-can"></i><% end %>
</li>
<% end %>
</ul>
<%= link_to tasks_new_path do %>
<i class="fa-sharp fa-solid fa-plus">Add new task</i>
<% end %>
